<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.Views.MainForm"
             NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="#fee6b9">
        <Label Text="Converter"
               FontSize="40"
               FontAttributes="Bold"
               Margin="0,20,0,0"
               TextColor="#000"
               HorizontalOptions="Center"/>

        <Frame VerticalOptions="FillAndExpand"
               CornerRadius="20"
               Margin="20"
               HasShadow="False">
            <StackLayout VerticalOptions="Center"
                         Spacing="20">
                <Image Source="a2.png"/>
                <Label Text="(cm) to (m)"
                       FontSize="40"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#000"/>
                <Button Text="Start"
                        TextTransform="None"
                        BackgroundColor="#fde080"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        x:Name="btnstart"
                        Clicked="btnstart_Clicked"/>


            </StackLayout>

            
        </Frame>

    </StackLayout>
  </ContentPage>